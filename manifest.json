{
  "manifest_version": 3,
  "name": "WurkWurk: Work Log Timer",
  "version": "2.2",
  "description": "Pops up at an interval to log your work to a Google Sheet.",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://script.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Log to WurkWurk",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/wurk-wurk-logo-16.png",
    "32": "icons/wurk-wurk-logo-32.png",
    "48": "icons/wurk-wurk-logo-48.png",
    "128": "icons/wurk-wurk-logo-128.png"
  },
  "commands": {
    "trigger-log-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open the WurkWurk log popup"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ 
        "sounds/*.wav",
        "images/wurk-wurk-logo.png",
        "images/coffee-button.png"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
