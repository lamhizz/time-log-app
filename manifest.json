{
  "manifest_version": 3,
  "name": "Work Log Timer",
  "version": "1.5",
  "description": "Pops up at an interval to log your work to a Google Sheet.",
  "permissions": [
    "storage", 
    "alarms", 
    "tabs", 
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://script.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "action": {
    "default_title": "Log Work Manually",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "trigger-log-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open the work log popup"
    }
  }
}

